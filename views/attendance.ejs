<%- include("partials/header") %>

<div class="container mt-5">
  <h2>Attendance</h2>

  <form method="post" action="/attendance/mark">
    <button class="btn btn-success"
      <%= markedToday ? "disabled" : "" %>>
      Mark Attendance
    </button>
  </form>

  <table class="table table-bordered mt-3">
    <thead>
      <tr>
        <th>Date</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% if (records.length === 0) { %>
        <tr><td colspan="2">No records</td></tr>
      <% } %>

      <% records.forEach(r => { %>
        <tr>
          <td><%= r.attendance_date %></td>
          <td><%= r.status %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include("partials/footer") %>
